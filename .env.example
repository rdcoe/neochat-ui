VITE_AUTH_PROVIDER=keycloak

# Keycloak/OIDC (current local setup)
VITE_OIDC_AUTHORITY=http://localhost:8180/realms/neochat
VITE_OIDC_CLIENT_ID=chat-ui
VITE_OIDC_REDIRECT_URI=http://localhost:5173
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:5173
VITE_OIDC_SCOPE=openid profile email

# Entra ID / MSAL (optional; used when VITE_AUTH_PROVIDER=entra-msal)
VITE_ENTRA_AUTHORITY=https://login.microsoftonline.com/<tenant-id>
VITE_ENTRA_CLIENT_ID=
VITE_ENTRA_REDIRECT_URI=http://localhost:5173
VITE_ENTRA_POST_LOGOUT_REDIRECT_URI=http://localhost:5173
VITE_ENTRA_LOGIN_SCOPES=openid profile email offline_access
# Example: api://<entra-app-id-uri>/neochat.access
VITE_ENTRA_API_SCOPES=

# NeoChat backend endpoints
VITE_ADMIN_API_BASE_URL=http://localhost:8081
VITE_CHAT_WS_BASE_URL=ws://localhost:8080
